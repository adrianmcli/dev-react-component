{
  "name": "dev-react-component",
  "version": "0.0.3",
  "description": "A minimalistic boilerplate for developing a react component as an NPM package.",
  "main": "lib/index.js",
  "scripts": {
    "start": "npm run storybook",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "prepublish": "npm run build",
    "build": "npm run build:lib && npm run build:dist && npm run build-storybook",
    "build:lib": "react-build-lib",
    "build:dist": "react-build-dist --bundle-name MyComponent.js"
  },
  "author": "Adrian Li",
  "license": "MIT",
  "devDependencies": {
    "@kadira/storybook": "^2.21.0",
    "react-build-lib": "adrianmcli/react-build-lib",
    "react-build-dist": "adrianmcli/react-build-dist"
  },
  "peerDependencies": {
    "react": "^15.4.0",
    "react-dom": "^15.4.0"
  }
}
